#some headers
header = "Upgrade-Insecure-Requests: 1"
header = "Accept-Encoding: gzip,deflate"
header = "Accept-Language: en-US,en;q=0.8"
header = "Accept: text/html,application/json,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8"

# Resolve names to IPv4 addresses only
ipv4

# HTTP response headers
# include

# trace
trace-time
# trace-ascii - # send to stdout

# Errors
show-error

# Failures
fail-with-body

# Follow HTTP redirects,
location
expect100-timeout 10

# And send AUTH
location-trusted

# Permit unsafed SSL
insecure

# When following a redirect,
# auto(matically) set the previous URL as referer
referer = "http://google.com/bot.html;auto"

# Spoof User Agent
user-agent = "Lynx/2.8.9rel.1 libwww-FM/2.14 SSL-MM/1.4.1"

# read .netrc for user name and password OR URL
# netrc-optional

# Compressed responses
compressed
# SCP / (S)FTP
compressed-ssh
# Display progress as a simple progress bar
progress-bar

# (S)FTP
append

# Download directories
create-dirs

# Wait 10 seconds before timing out
connect-timeout = 10

# keepalive-time 60
no-keepalive

# Maximum transfer time
max-time = 60

# # Make the timestamp of the local file the same as the remote one (if possible)
# remote-time
