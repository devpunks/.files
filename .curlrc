# Resolve names to IPv4 addresses only
ipv4

# Error Failures
show-error

# Follow HTTP redirects,
# And send AUTH
location-trusted

# Permit unsafed SSL
insecure

# When following a redirect,
# automatically set the previous URL as referer
referer = "http://google.com/bot.html;auto"

# Spoof User Agent
user-agent = "Lynx/2.8.9rel.1 libwww-FM/2.14 SSL-MM/1.4.1"

# read .netrc for user name and password OR URL
# netrc-optional

# Compressed responses
compressed
# SCP / (S)FTP
compressed-ssh
# Display progress as a simple progress bar
progress-bar

# (S)FTP
append

# Wait 60 seconds before timing out
connect-timeout = 10

# # Make the timestamp of the local file the same as the remote one (if possible)
# remote-time
