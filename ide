#!/bin/bash

# https://gist.github.com/sdondley/b01cc5bb1169c8c83401e438a652b84e

SESSION=`whoami`
SOCKET="devpunks" # See tmux -L|S <socket|file> flag

# start server
tmux start-server

# Setup a session work space called `$SESSION
tmux new-session -AdP -s $SESSION -n " devPunksðŸ¤˜ðŸ˜ˆðŸ¤˜studio" -x $COLUMNS -y $LINES

# attach to new session
tmux -v -u2 attach -t $SESSION
exit

tmux select-pane -T "DAMNNNN"
# tmux send-keys "vi" C-m

# Split pane 0 vertically by 30%
tmux split-window -h -l 30
tmux send-keys "git status" Enter
tmux select-pane -T "GIT"

# Split pane 1 horizontally
tmux split-window -v -l 5
tmux send-keys "pwd" Enter
tmux select-pane -T "PWD"

# Select pane 0
tmux select-pane -t 0

# Split pane 0 horizontally
tmux split-window -v -l 1
tmux send-keys "clear" Enter
tmux select-pane -T "FOO"
