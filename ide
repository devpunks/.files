#!/bin/bash

session=`whoami`

# Setup a work space called `$SESSION
# first window has 1 pane.
# Pane #1 -  split vertically 70%, set to root and running vim

# start server
tmux start-server

# create new session
tmux new-session -d -s $session -n "üï∂Ô∏è devPunks"

# Select pane 0 run vim
tmux select-pane -t 0
tmux send-keys "vim" C-m

# Split pane 1 vertically by 30%
tmux split-window -h -l 30
tmux send-keys "git status" C-m

# tmux split-window -t 1 -h -p 40 -c "$(pwd)"
# tmux select-pane -t 3
# tmux send-keys "pwd" C-m # watch/scripts

# tmux split-window -t 2 -h -p 40 -c "$(pwd)"
# tmux select-pane -t 4
# tmux send-keys "pwd" C-m # watch/browser

tmux -2 attach -t $session
