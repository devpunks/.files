#==========================================================================
# {{{ Style Codes
#==========================================================================
# 0 = Default Colour
# 1 = Bold
# 2 = Dim
# 3 = Italic
# 4 = Underlined
# 5 = Flashing Text
# 7 = Reverse Field
# 8 = Concealed
#
# }}}

#==========================================================================
# {{{ Color Codes
#==========================================================================
# 30  = Black
# 31  = Red
# 32  = Green
# 33  = Yellow
# 34  = Blue
# 35  = Purple
# 36  = Cyan
# 37  = Grey
# 40  = Black Background
# 41  = Red Background
# 42  = Green Background
# 43  = Yellow Background
# 44  = Blue Background
# 45  = Purple Background
# 46  = Cyan Background
# 47  = Grey Background
# 90  = Dark Grey
# 91  = Light Red
# 92  = Light Green
# 93  = Yellow
# 94  = Light Blue
# 95  = Light Purple
# 96  = Turquoise
# 100 = Dark Grey Background
# 101 = Light Red Background
# 102 = Light Green Background
# 103 = Yellow Background
# 104 = Light Blue Background
# 105 = Light Purple Background
# 106 = Turquoise Background
#
# }}}

#==========================================================================
# {{{ Types
#==========================================================================
# TODO: Works TOO good :ec=31:rs=31:lc=0:rc=0:cl=3
#
# no - Normal
# cl - C_CLR_TO_EOL - see grep completion
#
# Filetype Indicators ----
# bd - C_BLK - Block (buffered) special file
# cd - C_CHR - Character (unbuffered) special file
# di - C_DIR - Directory
# ex - C_EXEC - File which is executable (ie. has 'x' set in permissions).
# pi - C_FIFO - Fifo file
# fi - C_FILE - File
# ln - C_LINK - Symbolic Link
# or - C_ORPHAN - Symbolic Link pointing to a non-existent file (orphan)
# so - C_SOCK - Socket file
#
# Links ------------------
# ca - C_CAP
# do - C_DOOR
# mh - C_MULTIHARDLINK
# mi - C_MISSING - Symbolic link to non-existent file (visible when you type ls -l)
#
# Permittable ------------
# sg - C_SETGID
# su - C_SETUID
# st - C_STICKY
#
# }}}

# {{{ Functions ----------------------------------------------------------------
function default () { echo -n "*=1:"; }

function archives () { echo -n ":*.zip=1;4;7:"; }

function scripts () { echo -n ":*.bash=1;4:*.sh=1;4:*rc=2;3:"; }

function ls_colors () { echo -n "*LS_COLORS=2;3;4;7:*dircolors=2;3;4;7:"; }

function docs () { echo -n ":*README=2;7:*.md=7:*.markdown=7:*NOTES=7:*.h=1;3:*.sample=3:"; }

function dotfiles () { echo -n ":*profile=1;2;3:*gitignore=2;3;9:*.gitmodules=2;4:*.gitconfig=2;4:"; }

function historic () { echo -n ":*history=2;3;9:*.bak=2;3;9:*~=2;3;9:*.swp=2;3;9:*.dpkg-old=2;3;9:"; }

function config () { echo -n ":*.conf=2;4:*config=2;4:*.yml=2;4:*.yaml=2;4:*.toml=2;4:*.properties=2;4:"; }

function auth () { echo -n "*id_rsa=1;4;7:*.pem=1;4;7:*.pid=101:*.pub=3;4:*authorized_keys=3;4;7:*hosts=3;4;7:*.hosts=3;4;7:*known_hosts=3;4;7:"; }

function types () { echo -n "bd=101:ca=102:cd=103:do=105:mh=106:mi=1;9:or=108:sg=109:st=110:su=111:no=7:fi=1:di=1;3;4;7;4:ln=3;4;9:pi=1;4;5:so=1;4;5:ow=30;42:tw=30;43:ex=1;4:"; }

# }}}

export LS_COLORS="$( \
  ls_colors && default && dotfiles && auth && config \
    && scripts && historic && archives && docs && types )";

echo && echo 'devPunksðŸ˜ˆstudio .dircolors'

