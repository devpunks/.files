set mta=smtp://USER:PASSWORD@smtp.gmail.com:587
set smtp=smtps://smtp.gmail.com:465
set smtp-use-starttls
set ssl-verify=ignore
set v15-compat

set smtp-auth=login
set smtp-auth-password=YOURPASSWORD
set smtp-auth-user=USERNAME@gmail.com

