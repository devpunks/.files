function trash () {
  #   [ -f "$1" ] || \
  #     [ -d "$1" ]  \
  #       return tree -L 1 $TMPDIR

  for file in "$@"; do
    exist "$file" \
      && mv -i --strip-trailing-slashes "$file" "$TMPDIR" \
      && echo 'ðŸš®  Sent to trash ðŸ—‘' "$file"
